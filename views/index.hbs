<!-- main of the page -->
<main id="main">
  <!-- banner of the page -->
  {{#if randomBanner}}
  <section class="banner bg-full overlay" style="background-image: url(/uploads/{{randomBanner.filePath}});">
    <div class="holder">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 text-left">
            <h1 class="text-uppercase">
              {{randomBanner.description}}
            </h1>
            <div class="text-left">
              <a href="{{randomBanner.url}}" class="btn-primary text-center text-uppercase md-round">Visit all stores
                <span><i class="fa-solid fa-arrow-right-long"></i></span></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  {{else}}
  <section class="banner bg-full overlay">
    <div class="holder">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 text-left">
            <h1 class="text-uppercase">
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Aperiam optio,
            </h1>
            <div class="text-left">
              <a href="#" class="btn-primary text-center text-uppercase md-round">Visit all stores
                <span><i class="fa-solid fa-arrow-right-long"></i></span></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  {{/if}}

  <!-- latest coupon of the page -->
  <section class="latest-coupon container pad-top-lg pad-bottom-md">
    <div class="row">
      <header class="col-xs-12 text-center header">
        <h2 class="heading">Latest Coupon Codes &amp; Deals</h2>
      </header>
    </div>
    <div class="row">
      {{#each offers}}
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="coupon-box mar-bottom-xs">
          <div class="img-holder">
            <img src="{{Poster}}" alt="image description" class="img-resposnive" />
          </div>
          <div class="txt-holder">
            <h3 class="heading6" style="">
              <a href="coupon-detail.html">{{Description}}</a>
            </h3>
            <ul class="list-unstyled list-show">
              <li><a href="#"><i class="icon icon-smile"></i> Verified</a></li>
              <li><a href="#"><i class="icon icon-user"></i> Used</a></li>
            </ul>
            <a href="/offers-details/{{_id}}" class="btn-primary md-round text-center text-uppercase">Get Offer</a>
            <time class="time text-center" datetime="{{Start_date}}">Expires On: {{End_date}}</time>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </section>

