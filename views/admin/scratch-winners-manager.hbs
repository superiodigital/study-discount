<!-- Start Content-->
<div class="container-fluid" style="margin-top: 10px;">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Terms and scratch gifts</h4>
                    <!-- Assuming you have included the necessary layout and header/footer -->
                    <table id="basic-datatable" class="table dt-responsive nowrap w-100">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>User</th>
                                <th>Offer</th>
                                <th>Gift</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each winners}}
                            <tr>
                                <td>{{incrementedIndex @index}}</td>
                                <td>
                                    {{userName}}
                                </td>
                                <td>
                                    {{offerName}}
                                </td>
                                <td>
                                    {{giftName}}
                                </td>
                                {{!-- <td>
                                    edit button
                                    <a href="edit-scratch-card-gift/{{_id}}"><button type="button"
                                            class="btn btn-info waves-effect waves-light">
                                            <i class="fa-solid fa-pencil"></i></button></a>
                                    delete button
                                    <button type="button" class="btn btn-danger waves-effect waves-light"
                                        onclick="deleteScratchGifts('{{_id}}')">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td> --}}
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="6">No gifts available.</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- end card body-->
            </div>
            <!-- end card -->
        </div><!-- end col-->
        <!-- end col -->
    </div>
    <!-- end row -->
</div>