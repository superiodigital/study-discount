            method: 'POST',
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                } else {
                    location.reload();
                }
            })
            .catch(error => {
                // Handle errors here
                console.error('Fetch error:', error);
            });
    });
</script>